<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llViewPrints">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="@dimen/text_padding"
        android:layout_marginTop="@dimen/main_item_top"
        android:layout_marginLeft="@dimen/main_item_left"
        android:layout_marginRight="@dimen/main_item_right"
        android:layout_marginBottom="@dimen/main_item_bottom"
        android:id="@+id/tvFootPrintName"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/main_item_top"
        android:layout_marginLeft="@dimen/main_item_left"
        android:layout_marginRight="@dimen/main_item_right"
        android:layout_marginBottom="@dimen/main_item_bottom"
        android:id="@+id/myImage">

    </ImageView>
    <ImageView
        android:layout_width="@dimen/home_icon_size"
        android:layout_height="@dimen/home_icon_size"
        android:id="@+id/ivHome"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/main_margin_bottom"
        android:background="@drawable/loading_animation"
        android:src="@drawable/home_icon"/>
</LinearLayout>