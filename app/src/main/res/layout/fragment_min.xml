<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/load"
        android:src="@drawable/foot_print_memory"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_foot_name_bg"
        android:id="@+id/tvCreateFootPrint"
        android:text="@string/tv_create_foot_print"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_action_right_yellow"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/main_item_top"
        android:layout_marginLeft="@dimen/main_item_left"
        android:layout_marginRight="@dimen/main_item_right"
        android:layout_marginBottom="@dimen/main_item_bottom"
        android:id="@+id/recyclerView">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>